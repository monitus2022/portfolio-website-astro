---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";

const fontSize = "text-base"; // Configurable font size for the about page

const meta = {
	description: "My Personal Info",
	title: "About",
};

const skillsData = [
	{
		title: "AI & Machine Learning",
		skills: [
			{ name: "LangChain", icon: "simple-icons:langchain" },
			{ name: "HuggingFace", icon: "simple-icons:huggingface" },
			{ name: "OpenRouter", icon: "simple-icons:openrouter" },
			{ name: "Ollama", icon: "simple-icons:ollama" },
			{ name: "MLflow", icon: "simple-icons:mlflow" },
			{ name: "PyTorch", icon: "simple-icons:pytorch" },
			{ name: "TensorFlow", icon: "simple-icons:tensorflow" },
			{ name: "scikit-learn", icon: "simple-icons:scikitlearn" },
		],
	},
	{
		title: "Data Analytics",
		skills: [
			{ name: "Pandas", icon: "simple-icons:pandas" },
			{ name: "Plotly", icon: "simple-icons:plotly" },
			{ name: "RStudio", icon: "simple-icons:rstudioide" },
			{ name: "Power BI", icon: "simple-icons:powerbi" },
		],
	},
	{
		title: "Backend Development",
		skills: [
			{ name: "FastAPI", icon: "simple-icons:fastapi" },
			{ name: "Pydantic", icon: "simple-icons:pydantic" },
			{ name: "PostgresSQL", icon: "simple-icons:postgresql" },
			{ name: "Redis", icon: "simple-icons:redis" },
		],
	},
	{
		title: "Frontend Development",
		skills: [
			{ name: "Astro", icon: "simple-icons:astro" },
			{ name: "React", icon: "simple-icons:react" },
			{ name: "Ant Design", icon: "simple-icons:antdesign" },
			{ name: "Tailwind CSS", icon: "simple-icons:tailwindcss" },
			{ name: "Streamlit", icon: "simple-icons:streamlit" },
			{ name: "Gradio", icon: "simple-icons:gradio" },
		],
	},
	{
		title: "DevOps & Tools",
		skills: [
			{ name: "Github Actions", icon: "simple-icons:githubactions" },
			{ name: "Docker", icon: "simple-icons:docker" },
			{ name: "Kubernetes", icon: "simple-icons:kubernetes" },
			{ name: "Terraform", icon: "simple-icons:terraform" },
			{ name: "AWS", icon: "simple-icons:amazonwebservices" },
			{ name: "Azure", icon: "simple-icons:microsoftazure" },
			{ name: "AliCloud", icon: "simple-icons:alibabacloud" },
			{ name: "Cloudflare", icon: "simple-icons:cloudflare" },
		],
	},
];

const journeyData = [
	{
		type: "job",
		year: "2022",
		title: "[Job Title, e.g., Software Engineer]",
		subtitle: "[Company Name], [Location] | [Start Date] - [End Date or Present]",
		description: "",
		bullets: [
			"Developed [specific project/feature], resulting in [quantifiable impact, e.g., 20% performance improvement].",
			"Collaborated with cross-functional teams to [key responsibility].",
			"Technologies used: [e.g., React, Node.js, MongoDB].",
		],
	},
	{
		type: "education",
		year: "2016",
		title: "[Degree, e.g., Bachelor of Science in Computer Science]",
		subtitle: "[Institution Name], [Location] | [Graduation Year]",
		description:
			"Relevant coursework: [e.g., Data Structures, Algorithms, Web Development]. [Any honors or GPA if applicable].",
		bullets: [],
	},
];
---

<PageLayout meta={meta}>
	<h1 class="title mb-12">About Me</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<!-- Introduction -->
		<section class="mb-8">
			<p class="leading-relaxed">
				Hi, I'm [Your Name], a passionate [your profession, e.g., software developer] based in
				[location]. With [X years] of experience in [field, e.g., web development], I specialize in
				building efficient, user-centric solutions. I'm driven by [personal motivation, e.g.,
				solving complex problems and collaborating on innovative projects], and I'm always eager to
				learn and adapt in fast-paced environments.
			</p>
		</section>

		<!-- Skills -->
		<section class="mb-8">
			<h2 class="mb-4 text-2xl font-semibold">Skills</h2>
			<div class="space-y-6">
				{
					skillsData.map((category) => (
						<div>
							<h3 class="mb-3 text-lg font-medium">{category.title}</h3>
							<div class="flex flex-wrap gap-2">
								{category.skills.map((skill) => (
									<span class="bg-cactus/10 text-cactus inline-flex items-center rounded-full px-3 py-1 text-sm font-medium">
										<Icon name={skill.icon} class="mr-2 h-6 w-6" />
										{skill.name}
									</span>
								))}
							</div>
						</div>
					))
				}
			</div>
		</section>

		<!-- Timeline: My Journey -->
		<section class="mb-8">
			<h2 class="mb-6 text-2xl font-semibold">My Journey</h2>
			<div class="space-y-6">
				{
					journeyData.map((item) => (
						<div class="flex items-center">
							<div class="flex w-24 flex-shrink-0 flex-col items-center pr-4">
								<Icon
									name={item.type === "job" ? "mdi:briefcase" : "mdi:school-outline"}
									class="text-cactus h-7 w-7"
								/>
								<span class={`text-cactus ${fontSize} font-semibold`}>{item.year}</span>
							</div>
							<div class="border-cactus border-l-4 pl-4">
								<h3 class="text-lg font-medium">{item.title}</h3>
								<p class="text-sm text-gray-600 dark:text-gray-400">{item.subtitle}</p>
								{item.description && <p class={`mt-2 ${fontSize}`}>{item.description}</p>}
								{item.bullets.length > 0 && (
									<ul class={`mt-2 list-inside list-disc space-y-1 ${fontSize}`}>
										{item.bullets.map((bullet) => (
											<li>{bullet}</li>
										))}
									</ul>
								)}
							</div>
						</div>
					))
				}
			</div>
		</section>

		<!-- Optional: Interests or Call-to-Action -->
		<section>
			<h2 class="mb-4 text-2xl font-semibold">Beyond Work</h2>
			<p>
				When I'm not coding, I enjoy [hobbies, e.g., hiking, reading tech blogs, or contributing to
				open-source]. Feel free to <a href="/contact" class="cactus-link">reach out</a> to discuss opportunities
				or collaborations!
			</p>
		</section>
	</div>
</PageLayout>
