---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";

const meta = {
	description: "Skills and Projects",
	title: "Skills and Projects",
};

const skillsData = [
	{
		title: "AI & Machine Learning",
		skills: [
			{ name: "LangChain", icon: "simple-icons:langchain" },
			{ name: "HuggingFace", icon: "simple-icons:huggingface" },
			{ name: "OpenRouter", icon: "simple-icons:openrouter" },
			{ name: "Ollama", icon: "simple-icons:ollama" },
			{ name: "MLflow", icon: "simple-icons:mlflow" },
			{ name: "PyTorch", icon: "simple-icons:pytorch" },
			{ name: "TensorFlow", icon: "simple-icons:tensorflow" },
			{ name: "scikit-learn", icon: "simple-icons:scikitlearn" },
		],
	},
	{
		title: "Data Analytics",
		skills: [
			{ name: "Pandas", icon: "simple-icons:pandas" },
			{ name: "Plotly", icon: "simple-icons:plotly" },
			{ name: "RStudio", icon: "simple-icons:rstudioide" },
			{ name: "Power BI", icon: "simple-icons:powerbi" },
		],
	},
	{
		title: "Backend Development",
		skills: [
			{ name: "FastAPI", icon: "simple-icons:fastapi" },
			{ name: "Pydantic", icon: "simple-icons:pydantic" },
			{ name: "PostgresSQL", icon: "simple-icons:postgresql" },
			{ name: "Redis", icon: "simple-icons:redis" },
			{ name: "Pytest", icon: "simple-icons:pytest" },			
		],
	},
	{
		title: "Frontend Development",
		skills: [
			{ name: "Astro", icon: "simple-icons:astro" },
			{ name: "React", icon: "simple-icons:react" },
			{ name: "Ant Design", icon: "simple-icons:antdesign" },
			{ name: "Streamlit", icon: "simple-icons:streamlit" },
			{ name: "Gradio", icon: "simple-icons:gradio" },
		],
	},
	{
		title: "DevOps & Tools",
		skills: [
			{ name: "Github Actions", icon: "simple-icons:githubactions" },
			{ name: "Docker", icon: "simple-icons:docker" },
			{ name: "Kubernetes", icon: "simple-icons:kubernetes" },
			{ name: "Terraform", icon: "simple-icons:terraform" },
			{ name: "AWS", icon: "simple-icons:amazonwebservices" },
			{ name: "Azure", icon: "simple-icons:microsoftazure" },
			{ name: "AliCloud", icon: "simple-icons:alibabacloud" },
			{ name: "Cloudflare", icon: "simple-icons:cloudflare" },
		],
	},
];

---

<PageLayout meta={meta}>
	<h1 class="title mb-12">Skills</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<!-- Skills -->
		<section class="mb-8">
			<div class="space-y-6">
				{
					skillsData.map((category) => (
						<div>
							<h3 class="mb-3 text-lg font-medium">{category.title}</h3>
							<div class="flex flex-wrap gap-2">
								{category.skills.map((skill) => (
									<span class="bg-cactus/10 text-cactus inline-flex items-center rounded-full px-3 py-1 text-sm font-medium">
										<Icon name={skill.icon} class="mr-2 h-6 w-6" />
										{skill.name}
									</span>
								))}
							</div>
						</div>
					))
				}
			</div>
		</section>
	</div>
</PageLayout>
